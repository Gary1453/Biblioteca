<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>edu.ulima.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CambiarEstado</servlet-name>
        <servlet-class>edu.ulima.servlets.CambiarEstado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarLibros</servlet-name>
        <servlet-class>edu.ulima.servlets.MostrarLibros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarLibros</servlet-name>
        <servlet-class>edu.ulima.servlets.ActualizarLibros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarLibros</servlet-name>
        <servlet-class>edu.ulima.servlets.RegistrarLibros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IngresarLIbros</servlet-name>
        <servlet-class>edu.ulima.servlets.IngresarLIbros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarLibro</servlet-name>
        <servlet-class>edu.ulima.servlets.MostrarLibro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>edu.ulima.servlets.CerrarSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CambiarEstado</servlet-name>
        <url-pattern>/CambiarEstado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarLibros</servlet-name>
        <url-pattern>/MostrarLibros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarLibros</servlet-name>
        <url-pattern>/ActualizarLibros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarLibros</servlet-name>
        <url-pattern>/RegistrarLibros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IngresarLIbros</servlet-name>
        <url-pattern>/IngresarLIbros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarLibro</servlet-name>
        <url-pattern>/MostrarLibro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
